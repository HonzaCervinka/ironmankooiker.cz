    <!-- Popper JS -->
    <script src="{$basePath}/js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="{$basePath}/js/all.min.js"></script>
    	<!-- Lihtbox -->
	<script src="{$basePath}/js/lightbox.min.js"></script>
	{/block}
</body>
</html>
