    <link rel="stylesheet" href="{$basePath}/css/style_web.css">

</head>

<body>
    <!-- hlavicka -->
    <div class="top-bar">
    </div>

	    <!-- Navigacni lista -->
    <nav class="navbar bg-light navbar-light navbar-expand-lg sticky-top ">
        <div class="container">

            <a n:href="Homepage:default" class="navbar-brand"><img src="{$basePath}/img/logo.png" alt="Logo" title="Ironman"></a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a n:href="Homepage:default" class="nav-link {ifCurrent Homepage:default}active{/ifCurrent}">O Irym</a></li>
                    <li class="nav-item"><a n:href="Informace:default" class="nav-link {ifCurrent Informace:default}active{/ifCurrent}">Informace</a></li>
                    <li class="nav-item"><a n:href="Cestovani:default" class="nav-link {ifCurrent Cestovani:default}active{/ifCurrent}">Cestování se psem</a></li>
                    <li class="nav-item"><a n:href="Fotogalerie:default" class="nav-link {ifCurrent Fotogalerie:default}active{/ifCurrent}">Fotky</a></li>
                    <li class="nav-item"><a href="#kontakt" class="nav-link">Kontakt</a></li>
                </ul>
            </div>
        </div>
    </nav>

	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
	
	{include content}

	<footer>
